<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#2C2C2C"
    android:paddingBottom="48dp">

    <!-- Row 0 - Left and Right arrows at TOP -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/key_left"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="←"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1E1E1E" />

        <Button
            android:id="@+id/key_right"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="→"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1E1E1E" />
    </LinearLayout>

    <!-- Row 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button android:id="@+id/key_q" android:layout_width="0dp" android:layout_height="60dp" android:layout_weight="1" android:text="Q" android:textSize="18sp" android:textColor="#FFFFFF" android:backgroundTint="#1E1E1E" />
        <Button android:id="@+id/key_w" android:layout_width="0dp" android:layout_height="60dp" android:layout_weight="1" android:text="W" android:textSize="18sp" android:textColor="#FFFFFF" android:backgroundTint="#1E1E1E" />
        <Button android:id="@+id/key_e" android:layout_width="0dp" android:layout_height="60dp" android:layout_weight="1" android:text="E" android:textSize="18sp" android:textColor="#FFFFFF" android:backgroundTint="#1E1E1E" />
        <Button android:id="@+id/key_r" android:layout_width="0dp" android:layout_height="60dp" android:layout_weight="1" android:text="R" android:textSize="18sp" android:textColor="#FFFFFF" android:backgroundTint="#1E1E1E" />
        <Button android:id="@+id/key_t" android:layout_width="0dp" android:layout_height="60dp" android:layout_weight="1" android:text="T" android:textSize="18sp" android:textColor="#FFFFFF" android:backgroundTint="#1E1E1E" />
        <Button android:id="@+id/key_y" android:layout_width="0dp" android:layout_height="60dp" android:layout_weight="1" android:text="Y" android:textSize="18sp" android:textColor="#FFFFFF" android:backgroundTint="#1E1E1E" />
        <Button android:id="@+id/key_u" android:layout_width="0dp" android:layout_height="60dp" android:layout_weight="1" android:text="U" android:textSize="18sp" android:textColor="#FFFFFF" android:backgroundTint="#1E1E1E" />
        <Button android:id="@+id/key_i" android:layout_width="0dp" android:layout_height="60dp" android:layout_weight="1" android:text="I" android:textSize="18sp" android:textColor="#FFFFFF" android:backgroundTint="#1E1E1E" />
        <Button android:id="@+id/key_o" android:layout_width="0dp" android:layout_height="60dp" android:layout_weight="1" android:text="O" android:textSize="18sp" android:textColor="#FFFFFF" android:backgroundTint="#1E1E1E" />
        <Button android:id="@+id/key_p" android:layout_width="0dp" android:layout_height="60dp" android:layout_weight="1" android:text="P" android:textSize="18sp" android:textColor="#FFFFFF" android:backgroundTint="#1E1E1E" />
    </LinearLayout>

    <!-- Row 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button android:id="@+id/key_a" android:layout_width="0dp" android:layout_height="60dp" android:layout_weight="1" android:text="A" android:textSize="18sp" android:textColor="#FFFFFF" android:backgroundTint="#1E1E1E" />
        <Button android:id="@+id/key_s" android:layout_width="0dp" android:layout_height="60dp" android:layout_weight="1" android:text="S" android:textSize="18sp" android:textColor="#FFFFFF" android:backgroundTint="#1E1E1E" />
        <Button android:id="@+id/key_d" android:layout_width="0dp" android:layout_height="60dp" android:layout_weight="1" android:text="D" android:textSize="18sp" android:textColor="#FFFFFF" android:backgroundTint="#1E1E1E" />
        <Button android:id="@+id/key_f" android:layout_width="0dp" android:layout_height="60dp" android:layout_weight="1" android:text="F" android:textSize="18sp" android:textColor="#FFFFFF" android:backgroundTint="#1E1E1E" />
        <Button android:id="@+id/key_g" android:layout_width="0dp" android:layout_height="60dp" android:layout_weight="1" android:text="G" android:textSize="18sp" android:textColor="#FFFFFF" android:backgroundTint="#1E1E1E" />
        <Button android:id="@+id/key_h" android:layout_width="0dp" android:layout_height="60dp" android:layout_weight="1" android:text="H" android:textSize="18sp" android:textColor="#FFFFFF" android:backgroundTint="#1E1E1E" />
        <Button android:id="@+id/key_j" android:layout_width="0dp" android:layout_height="60dp" android:layout_weight="1" android:text="J" android:textSize="18sp" android:textColor="#FFFFFF" android:backgroundTint="#1E1E1E" />
        <Button android:id="@+id/key_k" android:layout_width="0dp" android:layout_height="60dp" android:layout_weight="1" android:text="K" android:textSize="18sp" android:textColor="#FFFFFF" android:backgroundTint="#1E1E1E" />
        <Button android:id="@+id/key_l" android:layout_width="0dp" android:layout_height="60dp" android:layout_weight="1" android:text="L" android:textSize="18sp" android:textColor="#FFFFFF" android:backgroundTint="#1E1E1E" />
        <Button android:id="@+id/key_period" android:layout_width="0dp" android:layout_height="60dp" android:layout_weight="1" android:text="." android:textSize="18sp" android:textColor="#FFFFFF" android:backgroundTint="#1E1E1E" />    </LinearLayout>

    <!-- Row 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button android:id="@+id/key_z" android:layout_width="0dp" android:layout_height="60dp" android:layout_weight="1" android:text="Z" android:textSize="18sp" android:textColor="#FFFFFF" android:backgroundTint="#1E1E1E" />
        <Button android:id="@+id/key_x" android:layout_width="0dp" android:layout_height="60dp" android:layout_weight="1" android:text="X" android:textSize="18sp" android:textColor="#FFFFFF" android:backgroundTint="#1E1E1E" />
        <Button android:id="@+id/key_c" android:layout_width="0dp" android:layout_height="60dp" android:layout_weight="1" android:text="C" android:textSize="18sp" android:textColor="#FFFFFF" android:backgroundTint="#1E1E1E" />
        <Button android:id="@+id/key_v" android:layout_width="0dp" android:layout_height="60dp" android:layout_weight="1" android:text="V" android:textSize="18sp" android:textColor="#FFFFFF" android:backgroundTint="#1E1E1E" />
        <Button android:id="@+id/key_enter" android:layout_width="0dp" android:layout_height="60dp" android:layout_weight="2" android:text="Enter" android:textSize="14sp" android:textColor="#FFFFFF" android:backgroundTint="#1E1E1E" />
        <Button android:id="@+id/key_b" android:layout_width="0dp" android:layout_height="60dp" android:layout_weight="1" android:text="B" android:textSize="18sp" android:textColor="#FFFFFF" android:backgroundTint="#1E1E1E" />
        <Button android:id="@+id/key_n" android:layout_width="0dp" android:layout_height="60dp" android:layout_weight="1" android:text="N" android:textSize="18sp" android:textColor="#FFFFFF" android:backgroundTint="#1E1E1E" />
        <Button android:id="@+id/key_m" android:layout_width="0dp" android:layout_height="60dp" android:layout_weight="1" android:text="M" android:textSize="18sp" android:textColor="#FFFFFF" android:backgroundTint="#1E1E1E" />
        <Button android:id="@+id/key_question" android:layout_width="0dp" android:layout_height="60dp" android:layout_weight="1" android:text="?" android:textSize="18sp" android:textColor="#FFFFFF" android:backgroundTint="#1E1E1E" />
    </LinearLayout>

    <!-- Row 4 - Space bars with delete, arrows, backspace -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/key_delete"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1.5"
            android:text="⌦"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1E1E1E" />

        <Button
            android:id="@+id/key_space_left"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="3"
            android:text="SPACE"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1E1E1E" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <Button
                android:id="@+id/key_up"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="↑"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#1E1E1E" />

            <Button
                android:id="@+id/key_down"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="↓"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#1E1E1E" />
        </LinearLayout>

        <Button
            android:id="@+id/key_space_right"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="3"
            android:text="<<=SPACE=>>"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1E1E1E" />

        <Button
            android:id="@+id/key_backspace"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1.5"
            android:text="⌫"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1E1E1E" />
    </LinearLayout>

</LinearLayout>